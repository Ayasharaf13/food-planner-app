<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LogInFragment">


    <TextView
        android:id="@+id/tvLogIn"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="-140dp"
        android:fontFamily="@font/montserratregular"
        android:text="Log in"
        android:textColor="@color/tvRegister"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="@+id/imgSpoonLogIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgCutleryLogIn" />

    <ImageView
        android:id="@+id/imgCutleryLogIn"
        android:layout_width="37dp"
        android:layout_height="25dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/cutlery"
        app:layout_constraintStart_toStartOf="@+id/tvLogIn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgSpoonLogIn"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/spoon"
        app:layout_constraintStart_toStartOf="@+id/imgLineLogIn"
        app:layout_constraintTop_toBottomOf="@+id/tvLogIn" />

    <ImageView
        android:id="@+id/imgLineLogIn"
        android:layout_width="257dp"
        android:layout_height="127dp"

        android:layout_marginStart="76dp"
        android:src="@drawable/vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCutleryLogIn" />

    <EditText
        android:id="@+id/editEmailAddressLogIn"
        android:layout_width="340dp"
        android:layout_height="48dp"

        android:layout_marginStart="5dp"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/reduisforinputfield"
        android:drawableRight="@drawable/emailicon"
        android:ems="10"
        android:fontFamily="@font/montserratregular"
        android:hint="User@gmail.com"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSpoonLogIn" />

    <EditText
        android:id="@+id/editPasswordLogIn"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/reduisforinputfield"
        android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
        android:ems="10"
        android:fontFamily="@font/montserratregular"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEmailAddressLogIn" />

    <Button
        android:id="@+id/buttonLogIn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/dark_green"
        android:text="Log in"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/directionicon"
        app:iconGravity="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPasswordLogIn" />


</androidx.constraintlayout.widget.ConstraintLayout>



