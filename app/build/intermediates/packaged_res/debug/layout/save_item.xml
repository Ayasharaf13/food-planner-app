<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgMealSaveItem"
            android:layout_width="170dp"
            android:layout_height="102dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/nameMealSaveItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/nameMealSaveItem"
            android:layout_width="126dp"
            android:layout_height="34dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/suezone"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/btnWatchSaveItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgMealSaveItem" />

        <Button
            android:id="@+id/btnWatchSaveItem"
            android:layout_width="122dp"
            android:layout_height="48dp"
            android:layout_marginStart="25dp"
            android:drawableLeft="@drawable/playicon"
            android:fontFamily="@font/robotolight"
            android:text="Watch"
            android:backgroundTint="@color/dark_green"
            app:cornerRadius="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameMealSaveItem" />


        <ImageView
            android:id="@+id/deleteItem"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="58dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgMealSaveItem"
            app:layout_constraintStart_toEndOf="@+id/nameMealSaveItem"
            app:srcCompat="@drawable/ic_baseline_delete_24" />

</androidx.constraintlayout.widget.ConstraintLayout>