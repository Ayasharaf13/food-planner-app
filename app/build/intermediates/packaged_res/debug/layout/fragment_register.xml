<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <TextView
        android:id="@+id/tvRegsiter"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="-80dp"
        android:fontFamily="@font/montserratregular"
        android:text="Register"
        android:textColor="@color/tvRegister"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="@+id/imgSpoon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgCutlery" />

    <EditText
        android:id="@+id/editPersonName"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/reduisforinputfield"
        android:drawableRight="@drawable/personicon"
        android:ems="10"

        android:fontFamily="@font/montserratregular"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSpoon" />

    <EditText
        android:id="@+id/editEmailAddress"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/reduisforinputfield"
        android:drawableRight="@drawable/emailicon"

        android:ems="10"
        android:fontFamily="@font/montserratregular"

        android:hint="User@gmail.com"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPersonName" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/reduisforinputfield"
        android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
        android:ems="10"
        android:fontFamily="@font/montserratregular"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEmailAddress" />

    <EditText
        android:id="@+id/editConfirmPassword"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/reduisforinputfield"
        android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
        android:ems="10"
        android:fontFamily="@font/montserratregular"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPassword" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="312dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"

        android:text="By checking the box you agree to our Terms and Conditions."
        android:textAllCaps="false"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editConfirmPassword" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonRegister"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/dark_green"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/directionicon"
        app:iconGravity="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <TextView
        android:id="@+id/tvAlreadyHaveOne"
        android:layout_width="131dp"
        android:layout_height="22dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="8dp"
        android:text="Already a member? "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegister" />

    <TextView
        android:id="@+id/tvLogIn"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="103dp"
        android:backgroundTint="@color/dark_green"
        android:text="Log in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvAlreadyHaveOne" />

    <ImageView
        android:id="@+id/imgCutlery"
        android:layout_width="37dp"
        android:layout_height="25dp"
        android:layout_marginStart="195dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/cutlery"
        app:layout_constraintStart_toStartOf="@+id/tvRegsiter"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgLine"
        android:layout_width="257dp"
        android:layout_height="127dp"

        android:layout_marginStart="88dp"
        android:src="@drawable/vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCutlery" />

    <ImageView
        android:id="@+id/imgSpoon"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="150dp"
        android:src="@drawable/spoon"
        app:layout_constraintEnd_toEndOf="@+id/imgLine"
        app:layout_constraintTop_toBottomOf="@+id/tvRegsiter" />

</androidx.constraintlayout.widget.ConstraintLayout>